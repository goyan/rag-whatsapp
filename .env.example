# ===========================================
# RAG WhatsApp Configuration
# ===========================================

# Server
PORT=3000
NODE_ENV=development

# ===========================================
# LLM PROVIDER
# Options: ollama | openai | claude
# ===========================================
LLM_PROVIDER=ollama

# ===========================================
# EMBEDDINGS PROVIDER
# Options: ollama | openai
# Note: Claude doesn't have embeddings API
# ===========================================
EMBED_PROVIDER=ollama

# ===========================================
# OLLAMA (Local - Free)
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_EMBED_MODEL=nomic-embed-text

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# ===========================================
# ANTHROPIC (Claude)
# ===========================================
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# INFRASTRUCTURE
# ===========================================

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=whatsapp_chunks

# Redis (for BullMQ queues)
REDIS_URL=redis://localhost:6379

# SQLite Database (metadata)
DATABASE_PATH=./data/metadata.db

# ===========================================
# RAG SETTINGS
# ===========================================

# Chunking
CHUNK_GAP_MINUTES=30
CHUNK_MAX_MESSAGES=100

# Retrieval
RETRIEVAL_TOP_K=5
RETRIEVAL_MIN_SCORE=0.7

# ===========================================
# AGENTS (Parallel Development)
# ===========================================
AGENT_MAX_CONCURRENT=3
